<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" stylesheets="@../cssFiles/darkApplication.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="bank.client.JavaFX.ButtonEventHandlerController">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="50.0" minWidth="50.0" prefWidth="50.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="100.0" prefWidth="500.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="50.0" minWidth="50.0" prefWidth="50.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="200.0" prefHeight="200.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Button fx:id="backButton" maxHeight="40.0" maxWidth="40.0" minHeight="40.0" minWidth="40.0" mnemonicParsing="false"
            onAction="#switchToInitialMenu" prefHeight="40.0" prefWidth="40.0" GridPane.columnIndex="0"/>
    <ToggleButton fx:id="themeButton" maxHeight="40.0" maxWidth="40.0" minHeight="40.0" minWidth="40.0"
                  mnemonicParsing="false" onAction="#switchTheme" prefHeight="40.0" prefWidth="40.0"
                  GridPane.columnIndex="2"/>
    <Label fx:id="title" alignment="CENTER" prefHeight="30.0" prefWidth="194.0" text="Please Login!"
           GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
    <GridPane minHeight="150.0" minWidth="480.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="50.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="50.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="40.0" percentHeight="50.0" prefHeight="40.0"/>
            <RowConstraints minHeight="40.0" percentHeight="50.0" prefHeight="40.0"/>
        </rowConstraints>
        <children>
            <Label text="Please enter your email:" GridPane.halignment="CENTER"/>
            <Label text="Please enter your password:" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
            <TextField GridPane.columnIndex="1"/>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </children>
    </GridPane>
    <Button fx:id="submitButton" mnemonicParsing="false" text="Submit" GridPane.columnIndex="1"
            GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
</GridPane>
